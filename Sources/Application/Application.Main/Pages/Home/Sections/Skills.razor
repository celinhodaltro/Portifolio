
<MudText Typo="Typo.h5" Class="mb-2 d-flex align-items-center gap-2 text-white">
    <MudIcon Icon="@Icons.Material.Outlined.Category" Color="Color.Primary" />
    Skills
</MudText>
<MudDivider Class="mb-4" />

<MudGrid GutterSize="3">
    @foreach (var item in cards)
    {
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="3"
                      Class="card-skill hover-elevation-8 transition rounded-xl text-center"
                      Style="background-color:rgba(0, 0, 0, 0.3);; color:white;">

                <MudIcon Icon="@item.Icon" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.h6" Class="mt-2 font-semibold">@item.Title</MudText>
                <MudText Typo="Typo.body2" Class="text-secondary">@item.Description</MudText>
            </MudPaper>
        </MudItem>
    }
</MudGrid>

<style>
    .card-skill {
        padding: 20px;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s ease;
    }

        .card-skill:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }
</style>



@code
{
    private List<(string Icon, string Title, string Description)> cards = new()
    {
        (Icons.Material.Filled.Storage , "Back-end", "C#, C++"),
        (Icons.Material.Filled.Computer, "Front-end", "Blazor | Angular | HTML, CSS, JS "),
        (Icons.Material.Filled.Storage , "Database", "Oracle, Postgree, Microsoft SQL Server, MySql"),
        (Icons.Material.Filled.AddCircle, "More", "Versionamento de codigo, CI/CD"),

    };
}

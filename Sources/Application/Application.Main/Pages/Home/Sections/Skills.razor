<MudContainer MaxWidth="MaxWidth.False" Class="py-10">
    <MudText Typo="Typo.h3" Align="Align.Center">Minhas habilidades</MudText>

    <MudGrid Class="mt-5" GutterSize="3">
        @foreach (var item in cards)
        {
            <MudItem xs="12" sm="6" md="3">
                <MudPaper Elevation="2" class="card-skill p-6 text-center hover-elevation-8 transition">
                    <MudIcon Icon="@item.Icon" Size="Size.Large" />
                    <MudText Typo="Typo.h6" Class="mt-2 font-bold">@item.Title</MudText>
                    <MudText Typo="Typo.body2">@item.Description</MudText>
                </MudPaper>
            </MudItem>
        }
    </MudGrid>
</MudContainer>

@code
{
    private List<(string Icon, string Title, string Description)> cards = new()
    {
        (Icons.Material.Filled.Storage , "Back-end", ".NET"),
        (Icons.Material.Filled.Computer, "Front-end", "Blazor e Angular"),
        (Icons.Material.Filled.Storage , "Database", "Oracle, Postgree, Microsoft SQL Server, MySql"),
        (Icons.Material.Filled.AddCircle, "More", "Versionamento de codigo, CI/CD"),

    };
}

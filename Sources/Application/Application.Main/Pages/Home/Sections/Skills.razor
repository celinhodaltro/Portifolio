<MudContainer MaxWidth="MaxWidth.False" Style="color:white">

    <MudText Typo="Typo.h5" Class="mb-4"><MudIcon Icon="@Icons.Material.Outlined.Category"/> Skills:</MudText>
    <MudDivider/>
    <MudGrid GutterSize="3" Justify="Justify.Center">
        @foreach (var item in cards)
        {
            <MudItem xs="12" sm="6" md="3" lg="2">
                <MudPaper style="background-color:rgba(0, 0, 0, 0.3); color:white" Outlined="true" Elevation="2" Class="card-skill text-center hover-elevation-8 transition">
                    <MudIcon Icon="@item.Icon" Size="Size.Large" />
                    <MudText Typo="Typo.h6" Class="mt-2 font-bold">@item.Title</MudText>
                    <MudText Typo="Typo.body2">@item.Description</MudText>
                </MudPaper>
            </MudItem>
        }
    </MudGrid>
    <MudDivider />
</MudContainer>

<style>
    .card-skill {
        padding: 20px;
        min-height: 180px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100%;
        box-sizing: border-box;
    }
</style>


@code
{
    private List<(string Icon, string Title, string Description)> cards = new()
    {
        (Icons.Material.Filled.Storage , "Back-end", "C#, C++"),
        (Icons.Material.Filled.Computer, "Front-end", "Blazor | Angular | HTML, CSS, JS "),
        (Icons.Material.Filled.Storage , "Database", "Oracle, Postgree, Microsoft SQL Server, MySql"),
        (Icons.Material.Filled.AddCircle, "More", "Versionamento de codigo, CI/CD"),

    };
}


<MudContainer MaxWidth="MaxWidth.Medium">
    <MudText Typo="Typo.h5" Class="mb-4">Specializations:</MudText>

    <MudGrid>
        @foreach (var skill in Skills)
        {
            <MudItem xs="12" sm="6" md="4">
                <MudCard>
                    <MudCardContent Class="d-flex flex-column align-center">
                        <MudText Typo="Typo.h6">@skill.Name</MudText>
                        <MudProgressCircular Value="@skill.Level" Color="Color.Dark" Size="Size.Medium" Thickness="5">
                        </MudProgressCircular>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    </MudGrid>

</MudContainer>

@code {

    public class Skill
    {
        public string Name { get; set; } = string.Empty;
        public int Level { get; set; } = 0;
    }

    private List<Skill> Skills = new()
    {
        new Skill { Name = ".NET", Level = 85 },
        new Skill { Name = "Blazor", Level = 75 },
        new Skill { Name = "Angular", Level = 50 },
        new Skill { Name = "JavaScript", Level = 30 },
        new Skill { Name = "HTML | CSS", Level = 40 },
        new Skill { Name = "Devops", Level = 50 },
        new Skill { Name = "DBA", Level = 40 },
        
    };

}

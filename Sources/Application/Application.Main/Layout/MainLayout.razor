@inherits LayoutComponentBase
@inject NavigationManager Navigation

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

@code {
    private bool IsHome => Navigation.Uri.EndsWith("/") || Navigation.Uri.Contains("/home");
}
@if (IsHome)
{
    @Body
}
else
{
    <MudContainer Class="layout-container">
        <MudMainContent Class="main-content">
            @Body
        </MudMainContent>
    </MudContainer>
}

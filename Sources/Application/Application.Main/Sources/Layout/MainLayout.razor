@inherits LayoutComponentBase
@inject NavigationManager Navigation

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<NavMenu/>
@if (IsHome)
{
    @Body
}
else
{

    <MudContainer Class="layout-container glassmorphism ">
        <MudMainContent Class="main-content">
            @Body
        </MudMainContent>
    </MudContainer>
}




@code {
    private bool IsHome => Navigation.Uri.EndsWith("/") || Navigation.Uri.Contains("/home");
}

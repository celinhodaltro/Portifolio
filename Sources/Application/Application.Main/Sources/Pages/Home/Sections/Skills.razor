<MudGrid>
    @foreach (var item in cards)
    {
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="3"
                      Class="card-skill hover-elevation-8 transition rounded-xl text-center"
                      Style="background:rgba(255,255,255,0.02); color:white;">

                <MudIcon Icon="@item.Icon" Size="Size.Large" Style="color:white" />

                <MudText Typo="Typo.h6" Class="my-2 font-semibold">@item.Title</MudText>
                <MudDivider Class="my-2" />

                <div class="d-flex flex-wrap justify-center gap-1">
                    @foreach (var tag in item.Tags)
                    {
                        <MudChip T="string"
                                 Color="Color.Primary"
                                 Variant="Variant.Filled"
                                 Size="Size.Small"
                                 Text="@tag"
                                 Class="skill-chip" />
                    }
                </div>
            </MudPaper>
        </MudItem>
    }
</MudGrid>

<style>
    .card-skill {
        padding: 20px;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.02);
        backdrop-filter: blur(6px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        transition: transform 0.2s ease, box-shadow 0.3s ease;
    }

        .card-skill:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0, 212, 255, 0.2);
        }

    .skill-chip {
        font-weight: 600;
        color: white !important;
        background: rgba(0, 212, 255, 0.1) !important;
        border: 1px solid rgba(0, 212, 255, 0.2) !important;
        backdrop-filter: blur(4px);
    }
</style>

@code {
    private List<(string Icon, string Title, string[] Tags)> cards = new()
    {
        (Icons.Material.Filled.Storage , "Backend", new[] { "C#", "C/C++", ".NET" }),
        (Icons.Material.Filled.Computer, "Frontend", new[] { "Blazor", "Angular", "HTML", "CSS", "JS" }),
        (Icons.Material.Filled.Storage , "DBA", new[] { "SQL Server", "Oracle", "PostgreSQL", "MySQL", "SQLite" }),
        (Icons.Material.Filled.AddCircle, "Others", new[] { "Git", "CI/CD", "DevOps", "Azure", "AWS" }),
    };
}

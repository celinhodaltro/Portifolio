

<MudGrid>
    @foreach (var item in cards)
    {
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="3"
                      Class="card-skill hover-elevation-8 transition rounded-xl text-center"
                      Style="background:rgba(255,255,255,0.02); color:white;">

                <MudIcon Icon="@item.Icon" Size="Size.Large" Color="Color.Primary" />
                
                <MudText Typo="Typo.h6" Class="my-2 font-semibold">@item.Title</MudText>
                <MudDivider Class="my-2" />
                <MudText Typo="Typo.body2" Class="text-white">@item.Description</MudText>
            </MudPaper>
        </MudItem>
    }
</MudGrid>

<style>
    .card-skill {
        padding: 20px;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s ease;
    }

        .card-skill:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }
</style>



@code
{
    private List<(string Icon, string Title, string Description)> cards = new()
    {
        (Icons.Material.Filled.Storage , "Backend", "C# | C/C++"),
        (Icons.Material.Filled.Computer, "Frontend", "Blazor | Angular | HTML, CSS, JS"),
        (Icons.Material.Filled.Storage , "DBA", "Microsoft SQL Server | Oracle | Postgree |  MySql | Sqlite..."),
        (Icons.Material.Filled.AddCircle, "Others", "Code Versioning | CI/CD | Devops Culture | Azure | AWS... "),

    };
}
